<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Converter.MainPage">
   
    <Label
         Text="Maui Converter"
         Style="{StaticResource Headline}"
         SemanticProperties.HeadingLevel="Level1" />

    <Grid RowSpacing="3" ColumnSpacing="3" Padding="3" BackgroundColor="dodgerblue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ImageButton Grid.Row="0"
          Grid.Column="0" 
          CornerRadius="4"
          Source="info.png"                    
          Padding="10"/>


        <ImageButton Grid.Row="1"
          Grid.Column="0"   
          CornerRadius="4"         
          Padding="10"/>

        <ImageButton Grid.Row="2"
          Grid.Column="0" 
          CornerRadius="4"
          Padding="10"/>

        <ImageButton Grid.Row="0"
          Grid.Column="1"  
          CornerRadius="4"
          Padding="10"/>

        <ImageButton Grid.Row="1"
          Grid.Column="1"  
          CornerRadius="4"
          Padding="10"/>

        <ImageButton Grid.Row="2"
          Grid.Column="1"  
          CornerRadius="4"
          Padding="10"/>

        <ImageButton Grid.Row="0"
          Grid.Column="2"  
          CornerRadius="4"
          Padding="10"/>

        <ImageButton Grid.Row="1"
          Grid.Column="2"   
          CornerRadius="4"
          Padding="10"/>

        <ImageButton Grid.Row="2"
          Grid.Column="2"   
          CornerRadius="4"               
          Padding="10"/>

    </Grid>


</ContentPage>
