<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Converter.MVVM.Views.VolumePage"
             NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="Auto,*,*" Padding="0">


            <Grid Grid.Row="0"
          BackgroundColor="Purple"
          Padding="16"
          ColumnDefinitions="Auto,*">

                <Button Text="â†"
                FontSize="24"
                TextColor="White"
                BackgroundColor="Transparent"
                Padding="8"
                Clicked="OnBackClicked"
                VerticalOptions="Center"/>

                <Label Grid.Column="1"
               Text="Volume"
               FontSize="28"
               TextColor="White"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

            </Grid>

            <!-- Bit Section -->
            <Grid Grid.Row="1"
                  BackgroundColor="SkyBlue"
                  Padding="20"
                  RowDefinitions="*,Auto">

                <Label x:Name="Volume1Value"
                       Text="1"
                       FontSize="64"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>

                <Picker x:Name="Vol1Picker"
                        Grid.Row="1"
                        Title="Volume"
                        BackgroundColor="WhiteSmoke"
                        TextColor="Black"
                        TitleColor="Black"
                        HorizontalOptions="Fill"
                        Margin="0,12,0,0">
                    <Picker.Items>
                        <x:String>Liter</x:String>
                        <x:String>Deciliter</x:String>
                        <x:String>Centiliter</x:String>
                        <x:String>Milliliter</x:String>
                        <x:String>Microliter</x:String>
                        <x:String>Nanoliter</x:String>
                    </Picker.Items>
                </Picker>
            </Grid>

            <!-- Byte Section -->
            <Grid Grid.Row="2"
                  BackgroundColor="#FFEDA9"
                  Padding="20"
                  RowDefinitions="*,Auto">

                <Label x:Name="Volume2Value"
                       Text="1000"
                       FontSize="64"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>

                <Picker x:Name="Vol2Picker"
                        Grid.Row="1"
                        Title="Volume"
                        BackgroundColor="WhiteSmoke"
                        TextColor="Black"
                        TitleColor="Black"
                        HorizontalOptions="Fill"
                        Margin="0,12,0,0">
                    <Picker.Items>
                        <x:String>Liter</x:String>
                        <x:String>Deciliter</x:String>
                        <x:String>Centiliter</x:String>
                        <x:String>Milliliter</x:String>
                        <x:String>Microliter</x:String>
                        <x:String>Nanoliter</x:String>
                    </Picker.Items>
                </Picker>
            </Grid>

        </Grid>
</ContentPage>