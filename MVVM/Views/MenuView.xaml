<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Converter.MVVM.Views.MenuView"
             NavigationPage.HasNavigationBar="False">

    <Grid RowSpacing="0" BackgroundColor="AliceBlue">

        <!-- ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0"
          BackgroundColor="#9C27B0"
          Padding="15">
            <Label
            Text="- MAUIVERTER -"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="White"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1"
          RowSpacing="3"
          ColumnSpacing="3"
          Padding="5"
          BackgroundColor="AliceBlue">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0"
                CornerRadius="10"            
                BackgroundColor="LightGreen"
                ImageSource="website.png"
                Text="Information"
                TextColor="Black"
                ContentLayout="Top,18"
                Padding="20"
                Clicked="OnInformationClicked"/>

            <Button Grid.Row="1" Grid.Column="0"
                CornerRadius="10"
                BackgroundColor="#AAE9E5"
                ImageSource="balance.png"
                Text="Mass"
                TextColor="Black"
                ContentLayout="Top,18"
                Padding="20"/>

            <Button Grid.Row="2" Grid.Column="0"
                CornerRadius="10"
                BackgroundColor="#FFEDA9"
                ImageSource="area.png"
                Text="Area"
                TextColor="Black"
                ContentLayout="Top,18"
                Padding="20"/>

            <Button Grid.Row="0" Grid.Column="1"
                CornerRadius="10"
                BackgroundColor="PeachPuff"
                ImageSource="glass.png"
                Text="Volume"
                TextColor="Black"
                ContentLayout="Top,18"
                Padding="20"
                Clicked="OnVolumeClicked"/>

            <Button Grid.Row="1" Grid.Column="1"
                CornerRadius="10"
                BackgroundColor="#EB6584"
                ImageSource="temperature.png"
                Text="Temperature"
                TextColor="Black"
                ContentLayout="Top,18"
                Padding="20"/>

            <Button Grid.Row="2" Grid.Column="1"
                CornerRadius="10"
                BackgroundColor="SkyBlue"
                ImageSource="performance.png"
                Text="Speed"
                TextColor="Black"
                ContentLayout="Top,18"
                Padding="20"/>

            <Button Grid.Row="0" Grid.Column="2"
                CornerRadius="10"
                BackgroundColor="LightBlue"
                ImageSource="measuring.png"
                Text="Length"
                TextColor="Black"
                ContentLayout="Top,18"
                Padding="20"/>

            <Button Grid.Row="1" Grid.Column="2"
                CornerRadius="10"
                BackgroundColor="#EACFFF"
                ImageSource="can.png"
                Text="Energy"
                TextColor="Black"
                ContentLayout="Top,18"
                Padding="20"/>

            <Button Grid.Row="2" Grid.Column="2"
                CornerRadius="10"
                BackgroundColor="LightPink"
                ImageSource="hourglass.png"
                Text="Duration"
                TextColor="Black"
                ContentLayout="Top,18"
                Padding="20"/>
        </Grid>

    </Grid>
</ContentPage>